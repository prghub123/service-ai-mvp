# ServiceAI MVP Environment Configuration

# Application
APP_NAME="ServiceAI MVP"
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database (PostgreSQL via Supabase)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/serviceai

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL_PRIMARY=gpt-4o-mini
OPENAI_MODEL_FALLBACK=gpt-3.5-turbo
LLM_TIMEOUT_SECONDS=5.0

# Twilio
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...

# Vapi.ai
VAPI_API_KEY=...
VAPI_ASSISTANT_ID=...
VAPI_WEBHOOK_SECRET=...

# Google Maps (optional for MVP)
GOOGLE_MAPS_API_KEY=...

# Business Rules
SLOT_RESERVATION_MINUTES=5
EMERGENCY_AUTO_ASSIGN=true
